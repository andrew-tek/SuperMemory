<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.googleappliedandroid.supermemory.RestoreOrder">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="100px">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select card "
            android:textAlignment="center"
            android:textColor="@android:color/holo_blue_bright"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/number_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="@android:color/holo_blue_bright"
            android:textSize="24sp" />
    </LinearLayout>

    <com.googleappliedandroid.supermemory.CardButtons
        android:id="@+id/a"
        android:layout_width="122dp"
        android:layout_height="176dp"
        android:background="@drawable/s1"
        android:layout_marginTop="94dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/b"
        android:layout_toStartOf="@+id/b" />

    <com.googleappliedandroid.supermemory.CardButtons
        android:id="@+id/b"
        android:layout_width="122dp"
        android:layout_height="176dp"
        android:background="@drawable/s1"
        android:layout_marginRight="64dp"
        android:layout_marginEnd="64dp"
        android:layout_alignTop="@+id/a"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <com.googleappliedandroid.supermemory.CardButtons
        android:id="@+id/c"
        android:layout_width="122dp"
        android:layout_height="176dp"
        android:background="@drawable/s1"
        android:layout_below="@+id/a"
        android:layout_alignLeft="@+id/a"
        android:layout_alignStart="@+id/a" />

    <com.googleappliedandroid.supermemory.CardButtons
        android:id="@+id/d"
        android:layout_width="122dp"
        android:layout_height="176dp"
        android:background="@drawable/s1"
        android:layout_alignTop="@+id/c"
        android:layout_toRightOf="@+id/a"
        android:layout_toEndOf="@+id/a" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/end_game"
        android:text="Give Up"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
